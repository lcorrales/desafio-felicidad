.top {
    
    width: 100%;
    
    padding-top: 30px;
    
    .header {
        
        img {
            max-width: 100%;
            margin-bottom: 15px;
        }
        
        p {

            
            font-family: 'Lato', sans-serif;
            font-size: 15px;
            color: #FFCC07;
        }

    }
    
    
    .medals {
        width: <%= 760 / 940.0 * 100 %>%;
        height: 450px;
    
        margin: 0 auto;

        position: relative;
        text-align: justify;

        &:after{
            content: "";
            width: 100%;
            display: inline-block;
        }

        .bar {
            
            width: 115%;
            height: 40px;
            position: absolute;
            top: 0px;
            background-image: url("/assets/top/barra_dorada.png");
            background-position: center;
            background-repeat: no-repeat;
            background-size: 100% auto;
            left: -50px;
        }
            

        .medal {
            width: <%= 220 / 940.0 * 100 %>%;
            height: 100%;

            display: inline-block;
            vertical-align: top;
            
            margin-top: 20px;

            img {
                max-width: 100%;
            }
        
            div {
                width: 100%;
                min-height: <%= 92 / 450.0 * 100 %>%;
                display: block;
                
               
                background-image: url("<%= image_path('top/nombre_ganadores.png') %>");
                background-position: center;
                background-repeat: no-repeat;   
                background-size: contain;
            
                p {
                    width: 80%;
                    min-height: 80%;

                    margin: 10%;

                    display: inline-block;
                    
                    font-family: 'Lato', sans-serif;
                    font-weight: 900;
                    font-size: 14px;

                    text-align: center;
                    text-transform: uppercase;
    
                    line-height: 25px;
                    word-wrap:break-word;
                    
                    color: #FFCC07;
                    
                    
                }
            }
            
        }
    }

    .ranking {
        width:  <%= 940 / 940.0 * 100 %>%;
        min-height: 200px;

        margin: 0 auto;
    
        padding:  <%= 20 / 940.0 * 100 %>%;            

        background-color: #FFCC07;
        -webkit-box-shadow: 0 0 34px #000;
           -moz-box-shadow: 0 0 34px #000;
                box-shadow: 0 0 34px #000;
                
        .list {

            width: 66%;
            
            float: left;
            
            -webkit-column-gap: 20px;
               -moz-column-gap: 20px;
                    column-gap: 20px;
    
            -webkit-column-count: 2;
               -moz-column-count: 2;
                    column-count: 2;

            .user {
                line-height: 30px;

                span {
                    display: inline-block;
                }
                
                span.number {
                    width: 60px;
                    text-align: center;
                    font-size: 26px;
                    font-weight: bold;
                    color: #051F27;
                }
                
                span.name {
                    width: 150px;
                    font-size: 18px;
                    color: #00595A;
                    font-style: italic;
                }

                span.points {
                    width: 90px;
                    font-size: 18px;
                    color: #00595A;
                    font-weight: 700;
                    font-style: italic;
                }
            }
        }
        
        .feed {
            width: 33%;
            min-height: 190px;

            float: left;
        }
        
    }
}