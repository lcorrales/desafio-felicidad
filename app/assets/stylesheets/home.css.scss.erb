.home {
    
    width: <%= 940 / 940.0 * 100 %>%;

    .app{

        width: <%= 940 / 940.0 * 100 %>%;
        
        text-align: center;
                

        img {
            
            max-width: <%= 660 / 940.0 * 100 %>%;
            
            float: left;
        }  

        .recuadro {
            margin-top: 75px;
            width: 335px; 
            height: 370px;
            display: inline-block;
            float: left;
        
            background-image: url("<%= image_path('home/recuadro.png') %>");
            background-position: center;
            background-repeat: no-repeat;
            background-size: contain;

            h2 {
                margin-top: 70px;
                color: #FFCB05;
                font-weight: bold;
                font-size: 18px;
                margin-bottom: 20px;
            }

            p {
                color: #FFCB05;
                width: 80%;
                margin: 0 auto;
            }

            a {
                width: 180px;
                height: 60px;

                margin-top: 15px;

                display: inline-block;
                text-indent: -99999px;
                background-image: url("<%= image_path('home/boton_obtener.png') %>");
                background-position: center;
                background-repeat: no-repeat;
                background-size: contain;
            }

        }
    }


    .video {
        
        width: <%= 940 / 940.0 * 100 %>%;
        margin-bottom: 20px;

        & > h2 {
            width: <%= 940 / 940.0 * 100 %>%;

            max-width: 940px;

            margin: 0 auto;  
            margin-bottom: 20px;

            & > span {
                margin-left: -9999px;
            }
        }
        
        & > div {
            width: <%= 620 / 940.0 * 100 %>%;
            height: 415px;
            margin: 0 auto;

        }


    }


    .explicacion {
        
        width: <%= 940 / 940.0 * 100 %>%;
        max-width: 940px;
    
        margin: 0 auto;
        

        & > div.background {
            left: 0px;

            height: 45%;
            z-index : -1;

            position: absolute;
    
            background-image: url("<%= image_path('home/transparencia.png') %>");  
            background-repeat: repeat;


        }

        & > div.columns {
            width: <%= 940 / 940.0 * 100 %>%;
            max-width: 940px;
            margin: 0 auto;
            
    
            & > div.column {
                width: 29%;
                
                float: left;
            
                padding: 20px;
            
                font-family: 'Lato', sans-serif;
                font-size: 16px;
                line-height: 22px;
                color: #3CBA93;
                font-style: italic;
                text-align: right;
                font-weight: 300;

                & > img{
                    display: block;
                    max-width: 100%;
                }

                &:nth-child(3) {
                    text-align: left;
                }
                
                &:nth-child(2) {
                    padding: 0;
                }
                
            }
        }
    }

    .frase {
        text-align: center;
        padding-top: 50px;
        padding-bottom: 70px;
    }
}

