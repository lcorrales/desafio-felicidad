#contactUs{
    width: 100%;
    padding-top: 45px; 

    .column {
        width: <%= 470 / 940.0 * 100 %>%;       
        height: 100%;
        float: left;

        .header{
            width: <%= 190 / 470.0 * 100%>%;
        }

        p.info {
            font-size: 15px;
            color: #FFCC07;
            line-height: 25px;

            margin-top: 10px;
            
            a {
                text-decoration: none;
                font-weight: 700;
                color: #3CBA93;
                font-size: 16px;
            }
        }

        .smile {
            margin: 15px 0;
        }


        #container_formulario {
            float: right;
            margin-top:60px;
        	width: 80%;
        	height: 100%;
        	padding:20px;
        	background-color:#FFCC07;
        	-webkit-box-shadow: 0 0 34px #000;
        	-moz-box-shadow: 0 0 34px #000;
        	box-shadow: 0 0 34px #000;
        	color:#00595A;
        	font-size:14px;
        	font-weight:900;

            margin-bottom: 15px;

            .espacio-form {

                background-color: #F9B215;
                line-height: 26px;
                border: none;
                font-size: 14px;
                color: #00595A;
                font-family: 'Lato', sans-serif;
            
            }

            .boton_form{
                background-color:#00595A;
            	line-height:26px;
            	border:none;
            	font-size:14px;
            	color:#FFCB05;
            	font-family: 'Lato', sans-serif;
            	margin-right:10px;
            	width:80px;
            	float:right;
                cursor: pointer;
            }

        }


        
    }
}