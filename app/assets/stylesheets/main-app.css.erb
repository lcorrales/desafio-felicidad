
html {
	width: 100%;			/*   768 /  768 */
	height: 100%;			/*  1024 / 1024 */
}

body {
	width: 100%;			/*   768 /  768 */
	height: 100%;			/*  1024 / 1024 */
	position: relative;

    font-size: 16px;
}

.page-container {
	width: 100%;			/*   768 /  768 */
	height: 100%;			/*  1024 / 1024 */
	
	position: absolute;
	top: 0px;
	left: 0px;
}

.page-container .page-content {
	margin: 0 auto;
	
	width: 100%;			/*  768 /  768 */
	height: 100%;			/* 1024 / 1024 */
	
	max-width: 768px;
	max-height: 1024px;
	
	background-position: top center;
	background-size: 100%;
	background-repeat: no-repeat;
}

.page-container *{
    font-family: Helvetica;
}

.loading{
    width: 100%;
    height: 100%;
    position: absolute;
    display: none;
    z-index: 1;
    background-color: rgba(0, 0, 0, 0.5);
}


.loading .wrapper{
    position: relative;
    width: 100%;
    height: 100%;
}

.loading .wrapper img{
    display: inline-block;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    position: absolute;
}



/* ================================================
   ================= GLOBAL =======================
   ================================================ */

.image-link{
	text-align: center;
}

.image-link span {
	position: absolute;
	top: -9999px;
	left: -9999px;
}

.image-link img{
	height: 100%;
	max-width: 100%;
}
 
.inactive { 
	position: absolute;
    left: -99999px;
}

.active {
    position: initial;
}

.resize-background{
	background-size: auto 100%;
	background-position: center center;
}

.block{
	display: block;
}
   
